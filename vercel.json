{
    "version": 2,
    "builds": [
        {
            "src": "src/api/chat_api.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.12"
            }
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "src/api/chat_api.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        }
    ],
    "env": {
        "PYTHON_VERSION": "3.12"
    }
}